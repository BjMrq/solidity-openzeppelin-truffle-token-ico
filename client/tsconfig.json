{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ],
      "shared/*": [
        "./src/components/shared/*"
      ],
      "sw/*": [
        "./src/service-worker/*"
      ],
      "contracts/*": [
        "../contracts/build/contracts/*"
      ],
    },
    "types": [
      "node",
      "styled-components"
    ],
    "typeRoots": [
      "./src/types",
      "../contracts/types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "./public",
    "./.cache",
    "./gatsby-*",
  ]
}